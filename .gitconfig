[user]
	name = merkvlad
	email = merkvladimir@gmail.com
[init]
	defaultBranch = master
[diff]
	tool = meld
[core]
	pager = 
	editor = nvim
	quotepath = false
[difftool]
	prompt = false
[merge]
	tool = meld
[alias]
	co = checkout
	cm = commit -m
	st = status
	cam = commit -a -m
	loga = log --oneline --graph --all
	br = branch
	lo = log --oneline
[pull]
	ff = only
[push]
	autoSetupRemote = true
[credential]
	helper = store
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
